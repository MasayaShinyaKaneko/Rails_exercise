<h1>Books</h1>
<table>
  <tr>
    <th class="th1">Title</th><th class="th2">Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td><td class="td2"><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
  </tr>
  <% end %>
</table>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <h3 class="errors">入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="errors"><%= message %></li>
    <% end %>
  </ul>
<% end %>
    <p class="submit_title">Title</p>
    <%= f.text_field :title ,class:"submit_coloum" %>
    <p class="submit_title">Body</p>
    <%= f.text_area :body ,class:"submit_coloum" %>
    <%= f.submit 'Create Book' ,class:"submit_button" %>
<% end %>
